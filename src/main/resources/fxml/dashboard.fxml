<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #e6eef5, #d0e3f0);
                   -fx-font-family: 'Segoe UI', sans-serif;
                   -fx-font-size: 14px;
                   -fx-text-fill: #1e3a5f;
                   -fx-padding: 20;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 15, 0, 0, 6);
                   -fx-background-radius: 20;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo13.DashboardController">

    <!-- Header -->
    <top>
        <Label prefHeight="86.0" prefWidth="736.0"
               style="-fx-font-size: 26px;
                      -fx-border-radius: 18px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #1e3a5f;
                      -fx-background-color: linear-gradient(to right, #ffffff, #f3f7fb);
                      -fx-padding: 25 0 25 0;
                      -fx-alignment: center;
                      -fx-border-color: transparent transparent #dbe3ec transparent;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
               text="Customer Billings" BorderPane.alignment="CENTER" />
    </top>

    <!-- Center: Customer Table -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <Label style="-fx-font-size: 18px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2c3e50;"
                   text="Customer Records" />

            <TableView fx:id="customerTable" style="-fx-background-color: white;
                                                     -fx-border-color: #c0cad6;
                                                     -fx-border-radius: 12;
                                                     -fx-background-radius: 12;
                                                     -fx-padding: 12;
                                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);
                                                     -fx-table-cell-border-color: transparent;
                                                     -fx-selection-bar: #007bff;
                                                     -fx-selection-bar-non-focused: #b3d9ff;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" />
                    <TableColumn fx:id="nameColumn" text="Name" />
                    <TableColumn fx:id="addressColumn" text="Address" />
                    <TableColumn fx:id="meterColumn" text="Meter" />
                    <TableColumn fx:id="usageColumn" text="Usage (kWh)" />
                    <TableColumn fx:id="billColumn" text="Bill (M)" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Sidebar -->
    <right>
        <VBox prefHeight="429.0" prefWidth="262.0" spacing="18"
              style="-fx-padding: 30;
                     -fx-background-color: #ffffff;
                     -fx-border-color: #c0cad6;
                     -fx-border-radius: 16;
                     -fx-background-radius: 16;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 3);
                     -fx-min-width: 250;"
              BorderPane.alignment="CENTER_RIGHT">

            <Label style="-fx-font-size: 20px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #1e3a5f;
                          -fx-padding: 0 0 10 0;"
                   text="Actions" />

            <Button fx:id="addButton" onAction="#handleAdd"
                    style="-fx-pref-width: 200;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-text-fill: white;
                           -fx-background-color: linear-gradient(to right, #0078ff, #00c6ff);
                           -fx-background-radius: 10;
                           -fx-cursor: hand;
                           -fx-padding: 10;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                    text="Add Customer" />

            <Button fx:id="loadButton" onAction="#handleLoadCustomers"
                    style="-fx-pref-width: 200;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-text-fill: white;
                           -fx-background-color: linear-gradient(to right, #6366f1, #4f46e5);
                           -fx-background-radius: 10;
                           -fx-cursor: hand;
                           -fx-padding: 10;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                    text="Load Customers" />

            <Button fx:id="deleteButton" onAction="#handleDelete"
                    style="-fx-pref-width: 200;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-text-fill: white;
                           -fx-background-color: linear-gradient(to right, #ef4444, #dc2626);
                           -fx-background-radius: 10;
                           -fx-cursor: hand;
                           -fx-padding: 10;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                    text="Delete" />

            <Button fx:id="searchButton" onAction="#handleSearch"
                    style="-fx-pref-width: 200;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-text-fill: white;
                           -fx-background-color: linear-gradient(to right, #00b4d8, #0096c7);
                           -fx-background-radius: 10;
                           -fx-cursor: hand;
                           -fx-padding: 10;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                    text="Search" />

            <Button fx:id="printSlipButton" onAction="#handlePrintSlip"
                    style="-fx-pref-width: 200;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-text-fill: white;
                           -fx-background-color: linear-gradient(to right, #34d399, #10b981);
                           -fx-background-radius: 10;
                           -fx-cursor: hand;
                           -fx-padding: 10;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                    text="Print Slip" />
        </VBox>
    </right>

</BorderPane>
