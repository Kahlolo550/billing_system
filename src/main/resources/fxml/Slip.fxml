<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="slipRoot"
      xmlns="http://javafx.com/javafx/20.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo13.SlipController"
      alignment="TOP_LEFT"
      spacing="15"
      style="-fx-padding: 30; -fx-background-color: #f3f7fb; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px;">

    <HBox spacing="10" alignment="CENTER_LEFT">

        <ImageView fx:id="logoImage" fitHeight="50" fitWidth="50" />
        <VBox spacing="2">
            <Label text="Lesotho Electricity Company" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label text="Customer Billing Slip" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
        </VBox>
    </HBox>


    <Label fx:id="customerIdLabel" text="Customer ID:" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
    <Label fx:id="nameLabel" text="Name:" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
    <Label fx:id="meterLabel" text="Meter No:" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
    <Label fx:id="usageLabel" text="Usage (kWh):" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
    <Label fx:id="billLabel" text="Bill Amount:" style="-fx-font-weight: bold; -fx-font-size: 16px;" />


    <Button text="Print Slip"
            fx:id="printButton"
            onAction="#handlePrint"
            style="-fx-pref-width: 150; -fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white; -fx-background-color: linear-gradient(to right, #34d399, #10b981); -fx-background-radius: 10; -fx-cursor: hand; -fx-padding: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 3);" />

</VBox>
