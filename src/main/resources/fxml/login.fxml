<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo13.LoginController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom right, #e6eef5, #d0e3f0);
             -fx-padding: 60;
             -fx-border-radius: 20;
             -fx-background-radius: 20;
             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 15, 0, 0, 8);
             -fx-font-family: 'Segoe UI', sans-serif;">

    <Label text="Welcome Back"
           style="-fx-font-size: 28px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #1e3a5f;
                  -fx-padding: 0 0 25 0;"/>

    <TextField fx:id="usernameField"
               promptText="Enter Username"
               style="-fx-pref-width: 280;
                      -fx-font-size: 15px;
                      -fx-padding: 12;
                      -fx-border-color: #c0cad6;
                      -fx-border-radius: 10;
                      -fx-background-radius: 10;
                      -fx-background-color: white;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);"/>

    <PasswordField fx:id="passwordField"
                   promptText="Enter Password"
                   style="-fx-pref-width: 280;
                          -fx-font-size: 15px;
                          -fx-padding: 12;
                          -fx-border-color: #c0cad6;
                          -fx-border-radius: 10;
                          -fx-background-radius: 10;
                          -fx-background-color: white;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);"/>

    <Button text="Login"
            onAction="#handleLogin"
            style="-fx-pref-width: 280;
                   -fx-font-size: 16px;
                   -fx-font-weight: bold;
                   -fx-text-fill: white;
                   -fx-background-color: linear-gradient(to right, #0078ff, #00c6ff);
                   -fx-background-radius: 10;
                   -fx-cursor: hand;
                   -fx-padding: 12;
                   -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);"/>

    <Label fx:id="messageLabel"
           style="-fx-text-fill: #d63031;
                  -fx-font-size: 14px;
                  -fx-font-weight: bold;
                  -fx-padding: 12 0 0 0;"/>
</VBox>
